{
  "version": "1.2.0",
  "fmt": {
    "lineWidth": 300,
    "singleQuote": true,
    "include": ["./src/**/*.ts"]
  },
  "tasks": {
    "mkreadme": "./scripts/mk_readme.ts",
    "repocheck": "./scripts/repo_check.ts",
    "publish": "./scripts/publish.ts"
  },
  "compilerOptions": {
    "strictNullChecks": false
  },
  "exclude": [".history"],
  "imports": {
    "@std/": "https://deno.land/std@0.223.0/",
    "@bitbeater/ecma-utils": "npm:@bitbeater/ecma-utils@^2.7.0",
    "@util/": "./src/utils/",
    "@type/": "./src/types/",
    "@error/": "./src/errors/",
    "cliffy/": "https://deno.land/x/cliffy@v1.0.0-rc.4/",
    "chalk": "npm:chalk@^5.6.2",
    "simple-git": "npm:simple-git@^3.30.0"
  }
}
